source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails', '~> 4.0.1'

# Backend
gem 'pg'
gem 'redis'
gem 'puma'
gem 'figaro'

# Tempo DB
gem 'tempodb'

# Heroku
gem 'rails_12factor', group: :production

# Frontend
gem 'slim-rails', '~> 2.0'
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'handlebars_assets'
gem 'momentjs-rails'
gem 'compass-rails'
gem 'bootstrap-sass', '~> 3.0.0.0'

# Development Tools
group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'quiet_assets'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

# Testing Setup
group :test do
  gem 'rspec-rails'
  gem 'simplecov', :require => false
  gem 'database_cleaner'
  gem 'factory_girl_rails'
end

# Security
gem 'bcrypt-ruby', '~> 3.0.0'

# JSON
gem 'oj'

# API stuff
gem 'httparty'
gem 'em-http-request'

# Jerbs
gem 'clockwork'